{
  "name": "ts-node-example",
  "version": "0.0.1",
  "description": "ts-node example with ts-jest.",
  "main": "index.ts",
  "author": "dooboolab",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node node_modules/ts-node/dist/bin.js ./src/index.ts",
    "lint": "standard --parser typescript-eslint-parser --plugin typescript **/*.ts",
    "test": "jest -w 1",
    "test:watch": "jest --watch"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  },
  "dependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.6",
    "jest": "^24.7.1",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.2.1"
  },
  "devDependencies": {
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.40",
    "@types/supertest": "^2.0.7",
    "eslint-plugin-typescript": "^0.14.0",
    "standard": "^12.0.1",
    "supertest": "^4.0.2",
    "typescript-eslint-parser": "^22.0.0"
  }
}
