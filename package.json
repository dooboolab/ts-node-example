{
  "name": "ts-node-example",
  "version": "0.0.1",
  "description": "ts-node example with ts-jest.",
  "main": "index.ts",
  "author": "dooboolab",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node node_modules/ts-node/dist/bin.js ./src/index.ts",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "lint": "eslint **/*.ts",
    "test": "jest -w 1",
    "test:coverage": "jest -w 1 --coverage",
    "test:watch": "jest --watch",
    "codecov": "codecov"
  },
  "dependencies": {
    "jest": "^24.7.1",
    "koa": "^2.7.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0"
  },
  "devDependencies": {
    "@koa/cors": "^2.2.3",
    "@types/jest": "^24.0.11",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.40",
    "@types/koa__cors": "^2.2.3",
    "@types/node": "^11.13.6",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "codecov": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "install": "^0.12.2",
    "nodemon": "^1.18.11",
    "npm": "^6.9.0",
    "standard": "^12.0.1",
    "supertest": "^4.0.2",
    "typescript": "^3.2.1",
    "typescript-eslint-parser": "^22.0.0"
  }
}
